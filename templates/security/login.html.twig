{% extends 'base.html.twig' %}

{% block title %}Connexion | OUTILS-QUALITÉ{% endblock %}

{% block meta_description %}
<meta name="description"
    content="Connectez-vous à votre compte pour accéder à vos outils qualité et sauvegarder vos analyses.">
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="py-5 bg-gradient-primary text-black" style="margin-top: 76px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right">
                <h1 class="display-4 fw-bold mb-4">Connexion</h1>
                <p class="lead mb-4">
                    Connectez-vous à votre compte pour accéder à vos outils qualité et sauvegarder vos analyses.
                </p>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <img src="{{ asset('img/markus-winkler-contact-unsplash.webp') }}" alt="Connexion" class="img-fluid rounded-3 shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- Login Form Section -->
<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card border-0 shadow-lg" data-aos="fade-up">
                    <div class="card-body p-5">
                        {% if app.user %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>Vous êtes déjà connecté</strong> en tant que {{ app.user.userIdentifier }}.
                                <a href="{{ path('app_logout') }}" class="alert-link">Se déconnecter</a>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% else %}
                            <h2 class="text-center mb-4 fw-bold">Connectez-vous</h2>
                            <p class="text-center text-muted mb-4">Accédez à vos outils et sauvegardez vos analyses</p>

                            {% if error %}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Erreur de connexion :</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            {% endif %}

                            <form method="post" data-turbo="false">
                                <div class="mb-3">
                                    <label for="username" class="form-label fw-semibold">
                                        <i class="fas fa-envelope me-2"></i>Email
                                    </label>
                                    <input 
                                        type="email" 
                                        value="{{ last_username }}" 
                                        name="_username" 
                                        id="username" 
                                        class="form-control form-control-lg" 
                                        autocomplete="email" 
                                        required 
                                        autofocus
                                        placeholder="votre.email@exemple.com"
                                    >
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label fw-semibold">
                                        <i class="fas fa-lock me-2"></i>Mot de passe
                                    </label>
                                    <input 
                                        type="password" 
                                        name="_password" 
                                        id="password" 
                                        class="form-control form-control-lg" 
                                        autocomplete="current-password" 
                                        required
                                        placeholder="Votre mot de passe"
                                    >
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="_remember_me" id="_remember_me">
                                        <label class="form-check-label" for="_remember_me">
                                            Se souvenir de moi
                                        </label>
                                    </div>
                                    <a href="#" class="text-decoration-none text-primary">
                                        Mot de passe oublié ?
                                    </a>
                                </div>

                                <div class="d-grid">
                                    <button class="btn btn-primary btn-lg px-5 py-3 fw-semibold" type="submit">
                                        <i class="fas fa-sign-in-alt me-2"></i>Se connecter
                                    </button>
                                </div>
                            </form>

                            <div class="text-center mt-4">
                                <p class="text-muted mb-0">
                                    Pas encore de compte ? 
                                    <a href="#" class="text-decoration-none fw-semibold">Créer un compte</a>
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Info Box -->
                <div class="card border-0 shadow-sm mt-4 bg-light" data-aos="fade-up" data-aos-delay="200">
                    <div class="card-body p-4">
                        <h5 class="fw-semibold mb-3">
                            <i class="fas fa-info-circle me-2 text-primary"></i>
                            Pourquoi se connecter ?
                        </h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Sauvegarder vos analyses (Ishikawa, 5 Pourquoi)
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Accéder à votre espace personnel
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Consulter vos créations sauvegardées
                            </li>
                            <li class="mb-0">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                Exporter et partager vos analyses
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
{% endblock %}
