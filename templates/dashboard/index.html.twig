{% extends 'base_with_sidebar.html.twig' %}

{% block title %}Tableau de bord | OUTILS-QUALITÉ{% endblock %}

{% block meta_description %}
<meta name="description" content="Tableau de bord utilisateur - Accédez à vos outils qualité - OUTILS-QUALITÉ">
{% endblock %}

{% block content %}
<!-- Main Content -->
<div class="container-fluid p-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 fw-bold mb-1">Tableau de bord</h1>
                <p class="text-muted mb-0">Bienvenue, {{ app.user.email }}</p>
            </div>
            <div>
                <div class="btn-group">
                    <a href="{{ path('app_ishikawa_index') }}" class="btn btn-primary">
                        <i data-lucide="git-branch" width="18" height="18" class="me-2"></i>
                        Créer un diagramme Ishikawa
                    </a>
                    <a href="{{ path('app_fivewhy_index') }}" class="btn btn-info">
                        <i data-lucide="help-circle" width="18" height="18" class="me-2"></i>
                        Nouvelle analyse 5 Pourquoi
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-3">
                                <i data-lucide="file-text" width="24" height="24"></i>
                            </div>
                            <span class="badge bg-primary bg-opacity-10 text-primary">Total</span>
                        </div>
                        <h3 class="fw-bold mb-1">{{ totalRecords }}</h3>
                        <p class="text-muted mb-0 small">Créations</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="bg-success bg-opacity-10 text-success rounded-3 p-3">
                                <i data-lucide="git-branch" width="24" height="24"></i>
                            </div>
                            <a href="{{ path('app_ishikawa_index') }}" class="badge bg-success bg-opacity-10 text-success text-decoration-none">Voir</a>
                        </div>
                        <h3 class="fw-bold mb-1">{{ ishikawaRecords }}</h3>
                        <p class="text-muted mb-0 small">Diagrammes Ishikawa</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="300">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="bg-info bg-opacity-10 text-info rounded-3 p-3">
                                <i data-lucide="help-circle" width="24" height="24"></i>
                            </div>
                            <a href="{{ path('app_fivewhy_index') }}" class="badge bg-info bg-opacity-10 text-info text-decoration-none">Voir</a>
                        </div>
                        <h3 class="fw-bold mb-1">{{ fiveWhyRecords }}</h3>
                        <p class="text-muted mb-0 small">Analyses 5 Pourquoi</p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-3" data-aos="fade-up" data-aos-delay="400">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="bg-warning bg-opacity-10 text-warning rounded-3 p-3">
                                <i data-lucide="user" width="24" height="24"></i>
                            </div>
                            <a href="{{ path('app_profile_index') }}" class="badge bg-warning bg-opacity-10 text-warning text-decoration-none">Voir</a>
                        </div>
                        <h3 class="fw-bold mb-1">1</h3>
                        <p class="text-muted mb-0 small">Compte actif</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-lg-8">
                <!-- Outils disponibles -->
                <div class="card border-0 shadow-sm mb-4" data-aos="fade-up">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="fw-bold mb-0">Mes outils disponibles</h5>
                            <a href="{{ path('app_outils_index') }}" class="btn btn-sm btn-outline-primary">
                                Voir tous les outils
                            </a>
                        </div>
                        
                        <div class="row g-3">
                            <!-- Outil Ishikawa -->
                            <div class="col-md-6">
                                <div class="card border h-100">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-2 me-3">
                                                <i data-lucide="git-branch" width="24" height="24"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-0">Diagramme Ishikawa</h6>
                                                <small class="text-muted">Analyse des causes</small>
                                            </div>
                                        </div>
                                        <p class="text-muted small mb-3">
                                            Analysez les causes racines avec le diagramme en arête de poisson.
                                        </p>
                                        <div class="d-grid gap-2">
                                            <a href="{{ path('app_ishikawa_index') }}" class="btn btn-primary btn-sm">
                                                <i data-lucide="play" width="14" height="14" class="me-1"></i>
                                                Utiliser l'outil
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Outil 5 Pourquoi -->
                            <div class="col-md-6">
                                <div class="card border h-100">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-info bg-opacity-10 text-info rounded-3 p-2 me-3">
                                                <i data-lucide="help-circle" width="24" height="24"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-0">Méthode 5 Pourquoi</h6>
                                                <small class="text-muted">Analyse des causes racines</small>
                                            </div>
                                        </div>
                                        <p class="text-muted small mb-3">
                                            Identifiez la cause racine en posant successivement "Pourquoi ?"
                                        </p>
                                        <div class="d-grid gap-2">
                                            <a href="{{ path('app_fivewhy_index') }}" class="btn btn-info btn-sm">
                                                <i data-lucide="play" width="14" height="14" class="me-1"></i>
                                                Utiliser l'outil
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dernières créations -->
                {% if recentRecords|length > 0 %}
                <div class="card border-0 shadow-sm" data-aos="fade-up" data-aos-delay="100">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h5 class="fw-bold mb-0">Mes dernières créations</h5>
                            <a href="{{ path('app_creations_index') }}" class="btn btn-sm btn-outline-primary">
                                Voir toutes
                            </a>
                        </div>
                        
                        <div class="list-group list-group-flush">
                            {% for record in recentRecords %}
                            <div class="list-group-item border-0 px-0 py-3">
                                <div class="d-flex align-items-start">
                                    <div class="bg-{% if record.type == 'ishikawa' %}primary{% else %}info{% endif %} bg-opacity-10 text-{% if record.type == 'ishikawa' %}primary{% else %}info{% endif %} rounded-3 p-2 me-3">
                                        <i data-lucide="{% if record.type == 'ishikawa' %}git-branch{% else %}help-circle{% endif %}" width="18" height="18"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="fw-semibold mb-1">{{ record.title }}</h6>
                                        <small class="text-muted">
                                            <i data-lucide="calendar" width="14" height="14" class="me-1"></i>
                                            {{ record.createdAt|date('d/m/Y à H:i') }}
                                        </small>
                                    </div>
                                    <div>
                                        <a href="{% if record.type == 'ishikawa' %}{{ path('app_ishikawa_index') }}?load={{ record.id }}{% else %}{{ path('app_fivewhy_index') }}?load={{ record.id }}{% endif %}" class="btn btn-sm btn-outline-primary">
                                            <i data-lucide="folder-open" width="14" height="14" class="me-1"></i>
                                            Charger
                                        </a>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="card border-0 shadow-sm" data-aos="fade-up" data-aos-delay="100">
                    <div class="card-body p-4 text-center">
                        <i data-lucide="file-text" width="48" height="48" class="text-muted mb-3"></i>
                        <h5 class="fw-bold mb-2">Aucune création</h5>
                        <p class="text-muted mb-4">Commencez à créer vos analyses avec nos outils !</p>
                        <div class="d-flex gap-2 justify-content-center">
                            <a href="{{ path('app_ishikawa_index') }}" class="btn btn-primary">
                                <i data-lucide="git-branch" width="18" height="18" class="me-2"></i>
                                Créer un diagramme Ishikawa
                            </a>
                            <a href="{{ path('app_fivewhy_index') }}" class="btn btn-info">
                                <i data-lucide="help-circle" width="18" height="18" class="me-2"></i>
                                Nouvelle analyse 5 Pourquoi
                            </a>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Right Column -->
            <div class="col-lg-4">
                <!-- Actions rapides -->
                <div class="card border-0 shadow-sm mb-4" data-aos="fade-up" data-aos-delay="200">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Actions rapides</h5>
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_ishikawa_index') }}" class="btn btn-outline-primary">
                                <i data-lucide="git-branch" width="18" height="18" class="me-2"></i>
                                Nouveau diagramme Ishikawa
                            </a>
                            <a href="{{ path('app_fivewhy_index') }}" class="btn btn-outline-info">
                                <i data-lucide="help-circle" width="18" height="18" class="me-2"></i>
                                Nouvelle analyse 5 Pourquoi
                            </a>
                            <a href="{{ path('app_creations_index') }}" class="btn btn-outline-success">
                                <i data-lucide="file-text" width="18" height="18" class="me-2"></i>
                                Mes créations
                            </a>
                            {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_admin_dashboard_index') }}" class="btn btn-outline-warning">
                                <i data-lucide="shield" width="18" height="18" class="me-2"></i>
                                Administration
                            </a>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Informations du compte -->
                <div class="card border-0 shadow-sm bg-light" data-aos="fade-up" data-aos-delay="300">
                    <div class="card-body p-4">
                        <h5 class="fw-semibold mb-3">
                            <i data-lucide="info" width="20" height="20" class="me-2 text-primary"></i>
                            Mon compte
                        </h5>
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 48px; height: 48px; font-weight: 600;">
                                {{ app.user.email|slice(0, 1)|upper }}
                            </div>
                            <div>
                                <div class="fw-semibold">{{ app.user.email }}</div>
                                <small class="text-muted">Membre depuis {{ app.user.createdAt|date('F Y') }}</small>
                            </div>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <a href="{{ path('app_profile_index') }}" class="btn btn-sm btn-outline-primary">
                                <i data-lucide="user" width="14" height="14" class="me-1"></i>
                                Modifier mon profil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
{% endblock %}
