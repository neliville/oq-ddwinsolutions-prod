{% extends 'base.html.twig' %}

{% block title %}{{ meta.title }}{% endblock %}

{% block meta_description %}{{ meta.description }}{% endblock %}

{% block meta_keywords %}{{ meta.keywords|default('legal, conformité, outils qualité') }}{% endblock %}

{% block og_title %}{{ meta.title }} | OUTILS-QUALITÉ{% endblock %}

{% block og_description %}{{ meta.description }}{% endblock %}

{% block body %}
<section class="py-5 bg-gradient-primary text-black" style="margin-top: 76px;" role="banner" aria-labelledby="legal-page-title">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <h1 id="legal-page-title" class="display-4 fw-bold mb-4">{{ page.title }}</h1>
                <p class="lead mb-4">{{ meta.description }}</p>
            </div>
            <div class="col-lg-4" data-aos="fade-left">
                <figure>
                    {% include 'components/media/responsive_picture.html.twig' with {
                        path: meta.image|default('img/mentions-legales.webp'),
                        alt: page.title,
                        width: 900,
                        height: 600
                    } %}
                    <figcaption><small>Source: Unsplash.</small></figcaption>
                </figure>
            </div>
        </div>
    </div>
</section>

<main id="main-content" class="container py-5" role="main" aria-label="Contenu de la page">
    <article class="legal-content prose" aria-labelledby="legal-page-title">
        {{ page.content|markdown_to_html|raw }}
    </article>
</main>
{% endblock %}
