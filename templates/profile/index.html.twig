{% extends 'base_with_sidebar.html.twig' %}

{% block title %}Mon profil | OUTILS-QUALITÉ{% endblock %}

{% block meta_description %}
<meta name="description" content="Gérez votre profil utilisateur - OUTILS-QUALITÉ">
{% endblock %}

{% block content %}
<!-- Main Content -->
<main class="pt-5 mt-4">
    <div class="container-fluid">
        <!-- Header -->
        <div class="header text-center mb-5" data-aos="fade-up">
            <h1 class="display-5 fw-bold mb-3">Mon profil</h1>
            <p class="lead text-muted">Gérez vos informations personnelles</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <!-- Profile Card -->
                <div class="card border-0 shadow-lg mb-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="card-body p-5">
                        <!-- Avatar Section -->
                        <div class="text-center mb-4">
                            <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px; font-size: 2.5rem; font-weight: 600;">
                                {{ app.user.email|slice(0, 1)|upper }}
                            </div>
                            <h4 class="fw-bold mb-1">{{ app.user.email }}</h4>
                            <p class="text-muted mb-0">
                                Membre depuis {{ app.user.createdAt|date('F Y') }}
                            </p>
                        </div>

                        <hr class="my-4">

                        <!-- Profile Form -->
                        <h5 class="fw-semibold mb-4">
                            <i class="fas fa-edit me-2 text-primary"></i>
                            Modifier mes informations
                        </h5>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="fas fa-check-circle me-2"></i>
                                {{ message }}
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        {% endfor %}

                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                {{ form_errors(form.email) }}
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Cette adresse email sera utilisée pour vous identifier sur la plateforme.
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a href="{{ path('app_home_index') }}" class="btn btn-outline-secondary me-md-2">
                                    <i class="fas fa-times me-2"></i>Annuler
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Enregistrer les modifications
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Account Info Card -->
                <div class="card border-0 shadow-sm" data-aos="fade-up" data-aos-delay="200">
                    <div class="card-body p-4">
                        <h5 class="fw-semibold mb-3">
                            <i class="fas fa-info-circle me-2 text-info"></i>
                            Informations du compte
                        </h5>
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <span class="text-muted">Email</span>
                                    <span class="fw-semibold">{{ app.user.email }}</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <span class="text-muted">Date d'inscription</span>
                                    <span class="fw-semibold">{{ app.user.createdAt|date('d/m/Y à H:i') }}</span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center py-2">
                                    <span class="text-muted">Rôle</span>
                                    <span class="badge bg-primary">
                                        {% if is_granted('ROLE_ADMIN') %}
                                            Administrateur
                                        {% else %}
                                            Utilisateur
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}

{% block stylesheets %}
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
{% endblock %}
