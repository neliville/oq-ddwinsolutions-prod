{% extends 'base.html.twig' %}

{% block title %}Blog Qualité | Articles et Guides | OUTILS-QUALITÉ{% endblock %}

{% block meta_description %}
<meta name="description"
    content="Découvrez nos articles sur l'amélioration continue, les méthodes qualité et les outils d'analyse. Guides pratiques et conseils d'experts.">
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="py-5 bg-gradient-primary text-black" style="margin-top: 76px;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8" data-aos="fade-right">
                <h1 class="display-4 fw-bold mb-4">Blog Qualité</h1>
                <p class="lead mb-4">
                    Découvrez nos articles, guides pratiques et conseils d'experts pour maîtriser
                    les outils d'amélioration continue et optimiser vos processus qualité.
                </p>
            </div>
            <div class="col-lg-4" data-aos="fade-left">
                <img src="{{ asset('img/blog-5why.webp') }}" alt="Blog qualité" class="img-fluid rounded-3 shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- Category Filters -->
<section class="py-4 bg-light">
    <div class="container">
        <div class="d-flex flex-wrap justify-content-center gap-2" id="categoryFilters" data-aos="fade-up">
            <button class="btn btn-primary" data-category="all">
                <i class="fas fa-th-large me-2"></i>Tous les articles
            </button>
            <button class="btn btn-outline-primary" data-category="amelioration-continue">
                <i class="fas fa-trending-up me-2"></i>Amélioration Continue
            </button>
            <button class="btn btn-outline-primary" data-category="methodologie">
                <i class="fas fa-book-open me-2"></i>Méthodologie
            </button>
            <button class="btn btn-outline-primary" data-category="outils">
                <i class="fas fa-tools me-2"></i>Outils
            </button>
            <button class="btn btn-outline-primary" data-category="lean">
                <i class="fas fa-chart-line me-2"></i>Lean Manufacturing
            </button>
        </div>
    </div>
</section>

<!-- Articles Section -->
<section class="py-5">
    <div class="container">
        <div id="articlesContainer" class="row g-4">
            <!-- Les articles seront chargés ici par JavaScript -->
            <div class="col-12 text-center">
                <p class="text-muted">Les articles seront affichés ici une fois la base de données configurée.</p>
            </div>
        </div>

        <!-- Message si aucun article -->
        <div id="noPostsMessage" class="text-center py-5" style="display: none;">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Aucun article trouvé</h4>
                    <p class="text-muted">Aucun article ne correspond à votre sélection.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                {% include 'components/newsletter-form.html.twig' with {'newsletterForm': newsletterForm} %}
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block stylesheets %}
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/blog-markdown.js') }}"></script>
{% endblock %}
