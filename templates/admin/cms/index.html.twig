{% extends 'base_with_sidebar.html.twig' %}

{% block title %}Gestion du contenu | Administration{% endblock %}

{% block content %}
<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">Gestion du contenu légal</h1>
            <p class="text-muted mb-0">Modifier les pages légales du site (Markdown + EasyMDE).</p>
        </div>
    </div>

    <div class="row g-4">
        {% for slug, page in pages %}
            <div class="col-xl-4 col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ page.title }}</h5>
                        <p class="text-muted small flex-grow-1">
                            Dernière mise à jour disponible dans l'éditeur.
                        </p>
                        <a href="{{ path('app_admin_cms_edit', { slug: slug }) }}" class="btn btn-primary btn-sm mt-3 align-self-start">
                            <i data-lucide="edit" width="16" height="16" class="me-1"></i>
                            Modifier
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<script>
if (typeof lucide !== 'undefined') {
    lucide.createIcons();
}
</script>
{% endblock %}
