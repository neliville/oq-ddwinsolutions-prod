{% extends 'base_with_sidebar.html.twig' %}

{% block title %}Gestion de la newsletter | Administration{% endblock %}

{% block content %}
<div class="container-fluid p-4">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
        </div>
    {% endfor %}
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">Gestion de la newsletter</h1>
            <p class="text-muted mb-0">Gérer les abonnés à la newsletter</p>
        </div>
        <div>
            <a href="{{ path('app_admin_newsletter_export', {filter: 'active'}) }}" class="btn btn-sm btn-outline-primary">
                <i data-lucide="download" width="16" height="16" class="me-1"></i>
                Exporter (CSV)
            </a>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small mb-2">Abonnés actifs</h6>
                            <h3 class="fw-bold mb-0">{{ activeCount }}</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="users" width="24" height="24" class="text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small mb-2">Désabonnés</h6>
                            <h3 class="fw-bold mb-0">{{ inactiveCount }}</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="user-x" width="24" height="24" class="text-danger"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small mb-2">Total</h6>
                            <h3 class="fw-bold mb-0">{{ total }}</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="mail" width="24" height="24" class="text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="btn-group" role="group" aria-label="Filtres">
                <a href="{{ path('app_admin_newsletter_index', {filter: 'all'}) }}" 
                   class="btn btn-sm {{ currentFilter == 'all' ? 'btn-primary' : 'btn-outline-primary' }}">
                    Tous ({{ total }})
                </a>
                <a href="{{ path('app_admin_newsletter_index', {filter: 'active'}) }}" 
                   class="btn btn-sm {{ currentFilter == 'active' ? 'btn-primary' : 'btn-outline-primary' }}">
                    Actifs ({{ activeCount }})
                </a>
                <a href="{{ path('app_admin_newsletter_index', {filter: 'inactive'}) }}" 
                   class="btn btn-sm {{ currentFilter == 'inactive' ? 'btn-primary' : 'btn-outline-primary' }}">
                    Inactifs ({{ inactiveCount }})
                </a>
            </div>
        </div>
    </div>

    <!-- Liste des abonnés -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            {% if subscribers|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 50px;">
                                <input type="checkbox" class="form-check-input" id="selectAll">
                            </th>
                            <th>Email</th>
                            <th>Date d'inscription</th>
                            <th>Date de désabonnement</th>
                            <th>Source</th>
                            <th>Statut</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for subscriber in subscribers %}
                        <tr class="{% if not subscriber.active %}table-secondary{% endif %}">
                            <td>
                                <input type="checkbox" class="form-check-input subscriber-checkbox" value="{{ subscriber.id }}">
                            </td>
                            <td>
                                <strong>{{ subscriber.email }}</strong>
                            </td>
                            <td>
                                <small>{{ subscriber.subscribedAt|date('d/m/Y H:i') }}</small>
                            </td>
                            <td>
                                {% if subscriber.unsubscribedAt %}
                                <small class="text-muted">{{ subscriber.unsubscribedAt|date('d/m/Y H:i') }}</small>
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if subscriber.source %}
                                <span class="badge bg-info">{{ subscriber.source }}</span>
                                {% else %}
                                <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if subscriber.active %}
                                <span class="badge bg-success">Actif</span>
                                {% else %}
                                <span class="badge bg-danger">Inactif</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm" role="group">
                                    {% if subscriber.active %}
                                    <form method="post" action="{{ path('app_admin_newsletter_unsubscribe', {id: subscriber.id}) }}" class="d-inline" data-turbo="false">
                                        <input type="hidden" name="_token" value="{{ csrf_token('unsubscribe_' ~ subscriber.id) }}">
                                        <button type="submit" class="btn btn-outline-warning" title="Désabonner">
                                            <i data-lucide="user-x" width="14" height="14"></i>
                                        </button>
                                    </form>
                                    {% endif %}
                                    <form method="post" action="{{ path('app_admin_newsletter_delete', {id: subscriber.id}) }}" 
                                          class="d-inline" 
                                          data-turbo="false"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet abonné ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_' ~ subscriber.id) }}">
                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                            <i data-lucide="trash-2" width="14" height="14"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if totalPages > 1 %}
            <div class="card-footer bg-white border-top">
                <nav aria-label="Pagination">
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_admin_newsletter_index', {filter: currentFilter, page: currentPage - 1}) }}">
                                <i data-lucide="chevron-left" width="14" height="14"></i>
                            </a>
                        </li>
                        {% endif %}

                        {% for i in 1..totalPages %}
                        {% if i == currentPage %}
                        <li class="page-item active">
                            <span class="page-link">{{ i }}</span>
                        </li>
                        {% elseif i <= 3 or i >= totalPages - 2 or (i >= currentPage - 1 and i <= currentPage + 1) %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_admin_newsletter_index', {filter: currentFilter, page: i}) }}">{{ i }}</a>
                        </li>
                        {% elseif i == 4 or i == totalPages - 3 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                        {% endif %}
                        {% endfor %}

                        {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('app_admin_newsletter_index', {filter: currentFilter, page: currentPage + 1}) }}">
                                <i data-lucide="chevron-right" width="14" height="14"></i>
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
            {% endif %}

            {% else %}
            <div class="text-center py-5">
                <i data-lucide="users" width="48" height="48" class="text-muted mb-3"></i>
                <p class="text-muted mb-0">Aucun abonné{{ currentFilter != 'all' ? ' (' ~ currentFilter ~ ')' : '' }}</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
if (typeof lucide !== 'undefined') {
    lucide.createIcons();
}

// Sélection multiple
document.getElementById('selectAll')?.addEventListener('change', function(e) {
    const checkboxes = document.querySelectorAll('.subscriber-checkbox');
    checkboxes.forEach(cb => cb.checked = e.target.checked);
});
</script>
{% endblock %}
