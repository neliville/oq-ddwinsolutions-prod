{% extends 'base_with_sidebar.html.twig' %}

{% block title %}Insights exports | Administration{% endblock %}

{% block content %}
<div class="container-fluid p-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center mb-4 gap-3">
        <div>
            <h1 class="h3 fw-bold mb-1">Suivi des exports</h1>
            <p class="text-muted mb-0">Formats téléchargés, outils sollicités et activité des utilisateurs.</p>
        </div>
        <a href="{{ path('app_admin_analytics_index') }}" class="btn btn-outline-primary btn-sm">
            <i data-lucide="arrow-left" class="me-1"></i> Retour aux analytics
        </a>
    </div>

    {% set totalExports = totalsByFormat|reduce((carry, item) => carry + item.total, 0) %}

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small mb-2">Exports totaux</h6>
                            <h3 class="fw-bold mb-0">{{ totalExports|default(0)|number_format(0, ',', ' ') }}</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="download" width="24" height="24" class="text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small mb-2">Formats suivis</h6>
                            <h3 class="fw-bold mb-0">{{ totalsByFormat|length }}</h3>
                            <small class="text-muted">PNG, PDF, JSON…</small>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="layers" width="24" height="24" class="text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase small mb-2">Utilisateurs actifs</h6>
                            <h3 class="fw-bold mb-0">{{ topUsers|length }}</h3>
                            <small class="text-muted">Top 10 contributeurs</small>
                        </div>
                        <div class="bg-info bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="users" width="24" height="24" class="text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Répartition par format</h5>
                </div>
                <div class="card-body p-0">
                    {% if totalsByFormat|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Format</th>
                                    <th class="text-end">Exports</th>
                                    <th class="text-end">Part</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for format in totalsByFormat %}
                                <tr>
                                    <td><span class="badge text-bg-primary">{{ format.format|upper }}</span></td>
                                    <td class="text-end fw-semibold">{{ format.total|number_format(0, ',', ' ') }}</td>
                                    <td class="text-end">{{ totalExports > 0 ? (format.total / totalExports * 100)|round(1) : 0 }} %</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i data-lucide="pie-chart" width="48" height="48" class="text-muted mb-3"></i>
                            <p class="text-muted mb-0">Aucun export enregistré pour le moment.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Répartition par outil</h5>
                </div>
                <div class="card-body p-0">
                    {% if totalsByTool|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Outil</th>
                                    <th class="text-end">Exports</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for tool in totalsByTool %}
                                <tr>
                                    <td>{{ tool.tool|title }}</td>
                                    <td class="text-end fw-semibold">{{ tool.total|number_format(0, ',', ' ') }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i data-lucide="grid" width="48" height="48" class="text-muted mb-3"></i>
                            <p class="text-muted mb-0">Aucun export enregistré pour le moment.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Top utilisateurs</h5>
                </div>
                <div class="card-body p-0">
                    {% if topUsers|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Utilisateur</th>
                                    <th class="text-end">Exports</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in topUsers %}
                                <tr>
                                    <td>{{ user.email }}</td>
                                    <td class="text-end fw-semibold">{{ user.total|number_format(0, ',', ' ') }}</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i data-lucide="user-check" width="48" height="48" class="text-muted mb-3"></i>
                            <p class="text-muted mb-0">Aucun export identifié par utilisateur.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">Derniers exports</h5>
                </div>
                <div class="card-body p-0">
                    {% if recentExports|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Utilisateur</th>
                                    <th>Outil</th>
                                    <th>Format</th>
                                    <th class="text-end">Source</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for log in recentExports %}
                                <tr>
                                    <td>{{ log.createdAt|date('d/m/Y H:i') }}</td>
                                    <td>{{ log.user ? log.user.email : 'Anonyme' }}</td>
                                    <td>{{ log.tool|title }}</td>
                                    <td><span class="badge text-bg-secondary">{{ log.format|upper }}</span></td>
                                    <td class="text-end">
                                        {% if log.sourceUrl %}
                                            <a href="{{ log.sourceUrl }}" target="_blank" rel="noopener" class="text-decoration-none">Voir</a>
                                        {% else %}
                                            <span class="text-muted">—</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i data-lucide="clock" width="48" height="48" class="text-muted mb-3"></i>
                            <p class="text-muted mb-0">Aucun export récent enregistré.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
if (typeof lucide !== 'undefined') {
    lucide.createIcons();
}
</script>
{% endblock %}
