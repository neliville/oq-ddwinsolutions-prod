{% extends 'base_with_sidebar.html.twig' %}

{% block title %}Analytics | Administration{% endblock %}

{% block content %}
<div class="container-fluid p-4">
    <div class="row g-4">
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="h4 fw-bold mb-1">Trafic & audiences</h2>
                            <p class="text-muted mb-0">Visites, pages vues, géographie et appareils utilisés</p>
                        </div>
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="bar-chart-2" width="26" height="26" class="text-primary"></i>
                        </div>
                    </div>
                    <p class="text-muted small flex-grow-1">Visualisez les courbes de fréquentation, les pages les plus consultées et les pays d'origine de vos visiteurs.</p>
                    <a href="{{ path('app_admin_analytics_traffic') }}" class="btn btn-primary align-self-start mt-2">
                        Explorer le trafic
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="h4 fw-bold mb-1">Partages & collaborations</h2>
                            <p class="text-muted mb-0">Liens Ishikawa partagés, activité et destinataires</p>
                        </div>
                        <div class="bg-success bg-opacity-10 rounded-circle p-3">
                            <i data-lucide="share-2" width="26" height="26" class="text-success"></i>
                        </div>
                    </div>
                    <p class="text-muted small flex-grow-1">Suivez l'usage des liens sécurisés, les analyses les plus partagées et les destinataires engagés.</p>
                    <a href="{{ path('app_admin_analytics_sharing') }}" class="btn btn-outline-success align-self-start mt-2">
                        Analyse des partages
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
if (typeof lucide !== 'undefined') {
    lucide.createIcons();
}
</script>
{% endblock %}
