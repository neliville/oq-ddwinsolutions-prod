<section class="tool-lead-cta rounded-3 p-4 p-md-5 mb-4 mb-md-5" aria-labelledby="tool-lead-cta-heading">
    <div class="tool-lead-cta__row">
        <div class="tool-lead-cta__icon" aria-hidden="true">
            <i class="fas fa-envelope-open-text" aria-hidden="true"></i>
        </div>
        <div class="tool-lead-cta__content">
            <h2 id="tool-lead-cta-heading" class="tool-lead-cta__title">Recevez nos ressources QSE</h2>
            <p class="tool-lead-cta__text">Guide complet, bonnes pratiques et astuces d'experts par email â€” gratuitement.</p>
            <a href="{{ path('app_home_index') }}#newsletter" class="btn btn-primary btn-sm mt-2">
                <i class="fas fa-envelope me-2" aria-hidden="true"></i>Recevoir le guide par email
            </a>
        </div>
    </div>
    <div class="tool-lead-cta__coming-soon">
        {% include 'components/coming_soon_download.html.twig' %}
    </div>
    {% if newsletterForm|default(null) %}
    <div class="tool-lead-cta__newsletter">
        <p class="small mb-2">Ou inscrivez-vous directement :</p>
        {% include 'components/newsletter-form.html.twig' with {'newsletterForm': newsletterForm} %}
    </div>
    {% endif %}
</section>
